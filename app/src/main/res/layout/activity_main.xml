<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_header"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:background="#EEEEEE"
        android:src="@android:drawable/ic_menu_camera"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_wybierz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wybierz zdjęcie"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/image_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_zrob_zdjecie"
        app:layout_constraintHorizontal_chainStyle="packed"


        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button_zrob_zdjecie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zrób zdjęcie"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/image_header"

        app:layout_constraintStart_toEndOf="@id/button_wybierz"
        app:layout_constraintEnd_toStartOf="@id/button_predykcja"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>


    <Button
        android:id="@+id/button_predykcja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sprawdź"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/image_header"
        app:layout_constraintStart_toEndOf="@id/button_zrob_zdjecie"
        app:layout_constraintEnd_toEndOf="parent"


        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/text_wynik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text=""
        tools:text="Tutaj pojawi się wynik\n(Pewność: 99%)"

        android:visibility="invisible"  android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"

        android:gravity="center"
        android:background="@drawable/wynik_ramka"

        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@id/button_wybierz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>